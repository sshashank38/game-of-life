
node('GOL') {

    stage('scm') {
        git credentialsId: 'jenkins_pwd', url: 'https://github.com/sshashank38/game-of-life.git'
    }

    stage('build') {
        sh 'mvn clean package'
    }

    stage('postbuild'){
        junit '**/TEST-*.xml'
        archiveArtifacts artifacts: '**/*.war', followSymlinks: false
    }
}